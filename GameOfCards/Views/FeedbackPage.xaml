<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameOfCards.Views.FeedbackPage"
             Title="FeedbackPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <Entry x:Name="EntryName" Placeholder="Your Good name please!" Text=""/>
            <Entry x:Name="EntryVersion" Placeholder="Version" IsEnabled="False" />
            <Entry x:Name="EntryDevice" Placeholder="Device" IsEnabled="False"/>
            <Label Text="Suggestion/Error Report : " />
            <Editor x:Name="EditorSuggestion" HeightRequest="200" BackgroundColor="SkyBlue"/>
            <Button x:Name="BtnSubmit"
                Text="Submit"
                    BackgroundColor="Indigo"
                    TextColor="White"/>
            <Button Text="Cancel" x:Name="BtnCancel"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>